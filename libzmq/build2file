int_libs = # Interface dependencies.
imp_libs = # Implementation dependencies.
#import imp_libs += libhello%lib{hello}

lib{zmq}: origin/include/{*.h} origin/src/{hxx ixx txx cxx}{**} $imp_libs $int_libs
lib{zmq}: platform/hxx{*} # THIS IS A MASSIVE HACK, see Readme

# Build options.
#
cxx.poptions =+ "-I$out_root" "-I$src_base/origin/src/"
cxx.poptions =+ "-I$src_base/platform" # THIS IS A MASSIVE HACK, see Readme

if ($cxx.target.class == 'windows')
{
  cxx.libs += ws2_32.lib rpcrt4.lib iphlpapi.lib Advapi32.lib
}

obja{*}: cxx.poptions += -DZMQ_STATIC
objs{*}: cxx.poptions += -DDLL_EXPORT

# Export options.
#
lib{zmq}:
{
  cxx.export.poptions = "-I$out_root" "-I$src_base/origin/include" "-I$src_base/origin/include"
  cxx.export.libs = $int_libs
}

liba{zmq}: cxx.export.poptions += -DZMQ_STATIC
# libs{zmq}: cxx.export.poptions += -DDLL_EXPORT

# Hacked by Klaim:
# Install into the libzmq/ subdirectory of, say, /usr/include/
# recreating subdirectories.
#
origin/include/{*.h}:
{
  install         = include/
  install.subdirs = false
}
